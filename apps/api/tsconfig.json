{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "incremental": false,
    "skipLibCheck": true,
    "paths": {
      "@account/*": ["src/account/*"],
      "@shared/*": ["src/shared/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules", ".build", ".eslintrc.js", "dist"],
  "include": ["src", "test"]
}
